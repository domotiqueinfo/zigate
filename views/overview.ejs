<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <title>Domotique-Info | Zigate</title>

  <!-- Bootstrap core CSS -->

  <link rel="stylesheet" href="<%= data.relative %>/css/bootstrap.min.css" />
  <link href="<%= data.relative %>/css/overview.css" rel="stylesheet">


<body>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark ">
    <a class="navbar-brand" href="/overview">Domotique-Info / ZiGate</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav  my-2 my-lg-0 ml-auto">
        <!-- <li class="nav-item active">
          <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
        -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions</a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown01">
            <a class="dropdown-item" href="/overview" >Rafraichir</a>
            <a class="dropdown-item" href="/inclusion/start">Démarrer Inclusion</a>
          </div>
        </li>
      </ul>

    </div>

  </nav>

  <main class="container-fluid">
    <% if(data.alert !== undefined) { %>
    <div class="alert alert-<%= data.alert.type %>" role="alert">
      <%= data.alert.message %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% } %>
    <% if(data.devices === undefined ||(data.devices !== undefined && data.devices.length === 0)) { %>
    <div class="text-center">
      Aucuns périphériques disponibles.
    </div>
    <% } %>
    <div class="row">
      <% for(let i = 0; i < data.devices.length ; i++) { %>
      <div class="col-sm-3">
        <div class="card device-card">
          <img src="http://192.168.1.33:3000/imgs/DEV_LIGHT_on.png" class="card-img-top smallimg" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= data.devices[i].name %></h5>
            <p class="card-text"></p>
            <a href="/device/<%= data.devices[i].ieee %>/on" class="btn btn-primary">On</a>
            <a href="/device/<%= data.devices[i].ieee %>/off" class="btn btn-primary">Off</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>

  </main><!-- /.container -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script>
    window.jQuery || document.write('<script src="/docs/4.3/assets/js/vendor/jquery-slim.min.js"><\/script>')
  </script>
  <script language="javascript" src="<%= data.relative %>/js/bootstrap.min.js"></script>
</body>

</html>